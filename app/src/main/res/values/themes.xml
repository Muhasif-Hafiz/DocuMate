<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DocuMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- Optional: Use light or dark icons on the status bar -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.DocuMate" parent="Base.Theme.DocuMate" />


    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <!-- Size customization -->
        <item name="android:layout_height">72dp</item> <!-- Increased height for better spacing -->
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="itemIconSize">26dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>

        <!-- Background with curved corners -->
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="itemRippleColor">@color/white_20</item>

        <!-- Text appearance -->
        <item name="itemTextAppearanceActive">@style/BottomNavigationText.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationText.Inactive</item>

        <!-- Behavior -->
        <item name="itemHorizontalTranslationEnabled">true</item>
        <item name="labelVisibilityMode">labeled</item>


    </style>

    <style name="BottomNavigationText.Active" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="itemPaddingBottom">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:paddingTop">4dp</item> <!-- Additional text padding -->
    </style>

    <style name="BottomNavigationText.Inactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingTop">4dp</item> <!-- Additional text padding -->
    </style>
</resources>

